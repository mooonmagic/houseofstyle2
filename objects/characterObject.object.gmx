            <string>//MOTION OF CHARACTER

// I copied this first-person controller (and the camera that goes with it) from https://enigma-dev.org/docs/Wiki/3D_for_GML:_First_person_mouselook
//

//set friction
friction=1; // I set the friction really high so we wouldn't slide around

//walk
if keyboard_check(ord('W')) {

    motion_add(cameraObject.direction,16); // I've never used motion_add() before but I kept it because I don't know how to move in the mouselook direction without it
                                           // Also, I made it instantly jump to the top speed because accelerating is dumb
    friction=0;
}
else if keyboard_check(ord('S')) {

    motion_add(cameraObject.direction+180,16 );
    friction=0;
}

//strafe
if keyboard_check(ord('A')) {
    
    motion_add(cameraObject.direction+90,16);
    friction=0;
}
else if keyboard_check(ord('D')) {
    
    motion_add(cameraObject.direction-90,16);
    friction=0;
}

//limit speed
if abs(speed) &gt; 16 {
    
    speed = 16;
}

//let's collide with the exit
if instance_exists(exitObject) {

    if point_distance(exitObject.x,exitObject.y,x,y) &lt; 12 {
    
        room_goto_next();
    }
}
</string>
